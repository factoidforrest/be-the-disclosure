model User {
  id          String    @id @default(uuid())
  createdAt   DateTime  @default(now())
  email       String?
  sub         String    @unique
  given_name  String?
  family_name String?
  nickname    String?
  Torrent     Torrent[]
}

model Torrent {
  id          String   @id @default(uuid())
  name        String
  magnetLink  String   @unique
  createdAt   DateTime @default(now())
  source      String
  description String
  reviewed    String   @default("pending")
  tags        Tag[]    @relation()
  creator     User     @relation(references: [id], fields: [userId])
  userId      String
}
