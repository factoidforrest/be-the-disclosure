generator client {
  provider = "prisma-client-js"
  output   = "../src/db/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Tag {
  id       String    @id @default(uuid())
  name     String    @unique
  torrents Torrent[]
}

